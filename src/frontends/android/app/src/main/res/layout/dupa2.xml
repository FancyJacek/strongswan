<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#67B060">

    <TextView
        android:id="@+id/dialog_title_text_view"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:text="FAMOC"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/dialog_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_title_text_view"
        android:text="dupa dupa cycki\nwtf omg lol cipa"

        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"/>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_below="@id/dialog_text_view"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:onClick="onOkButtonClick"/>
    <View
        android:layout_below="@id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="10dp" />
</RelativeLayout>
